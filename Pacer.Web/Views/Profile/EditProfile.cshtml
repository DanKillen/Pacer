@model RunningProfileViewModel

<div class="card shadow p-4 mt-5 mx-auto w-75">
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark p-2">
        <!-- your SVG logo goes here -->
    </div>

    <h3 class="my-3 mx-auto">Edit Running Profile</h3>

    <form asp-action="EditProfile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3" style="display: none;">
            <label asp-for="UserId" class="form-label"><i class="bi-person-fill"></i> User ID</label>
            <input asp-for="UserId" class="form-control" value="@User.Identity.Name" type="hidden" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="DateOfBirth" class="form-label"><i class="bi-calendar3"></i> Date of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Gender" class="form-label"><i class="bi-gender-ambiguous"></i> Gender</label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <!-- Add more options if you have more genders -->
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="WeeklyMileage" class="form-label"><i class="bi-speedometer2"></i> Weekly Mileage</label>
            <input asp-for="WeeklyMileage" type="number" class="form-control" />
            <span asp-validation-for="WeeklyMileage" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FiveKTimeMinutes" class="form-label">5K Time - Minutes</label>
            <input asp-for="FiveKTimeMinutes" type="number" class="form-control" />

            <label asp-for="FiveKTimeSeconds" class="form-label">5K Time - Seconds</label>
            <input asp-for="FiveKTimeSeconds" type="number" class="form-control" />

            <span asp-validation-for="FiveKTime" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
            <!-- Cancel button or other navigation options -->
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
