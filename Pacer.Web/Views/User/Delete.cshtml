@model DeleteViewModel

<div class="card shadow p-4 mt-5 mx-auto w-75" role="region" aria-labelledby="headingDeleteProfile">
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark">
        <img src="\images\LogoTrimWIP.png" height="50px" alt="Logo">
    </div>
    <h1 class="mx-auto">Delete User Profile</h1>
    <hr class="custom-hr">

    <!-- User Info -->
    <h4 class="text-center mt-3">Details for @Model.Name</h4>

    <div class="mt-3">
        <h4 class="form-label" id="nameLabel"><i class="bi-person-fill"></i> Name: @Model.Name</h4>
    </div>

    <div class="mt-3">
        <h4 class="form-label" id="emailLabel"><i class="bi-envelope-fill"></i> Email: @Model.Email</h4>
    </div>

    <div class="mt-3">
        <h4 class="form-label" id="roleLabel"><i class="bi-person-badge-fill"></i> Role: @Model.Role</h4>
    </div>

    <hr class="custom-hr">

    <!-- Delete Account Button -->
    <div class="mt-3">
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" 
          data-bs-target="#deleteModal" aria-controls="deleteModal" aria-haspopup="true">Delete Account</button>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-modal="true" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="background-color: grey;">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete @Model.Name's account? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
