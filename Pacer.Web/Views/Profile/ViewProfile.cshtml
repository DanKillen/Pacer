@model RunningProfileViewModel
<div class="card shadow p-4 mt-4 mx-auto w-75" role="main" aria-labelledby="profile-heading">
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark">
        <img src="\images\LogoTrimWIP.png" height="50px">
    </div>
    <h1 class="mx-auto">@Model.UserName's Running Profile</h1>
    <hr class="custom-hr">
    <div class="mt-3">
        <h4 class="form-label"><i class="bi-calendar3" aria-hidden="true"></i> Age: @Model.Age</h4>
    </div>

    <div class="mt-3">
        <h4 class="form-label"><i class="bi-gender-ambiguous" aria-hidden="true"></i> Gender: @Model.Gender</h4>
    </div>

    <div class="mt-3">
        <h4 class="form-label"><i class="bi-speedometer2" aria-hidden="true"></i> Weekly Mileage: @Model.WeeklyMileage miles per week</h4>
    </div>

    <div class="mt-3" style="display: flex; align-items: center;">
        <h4 class="form-label"><i class="bi-stopwatch-fill" aria-hidden="true"></i> 5K Time: @Model.FiveKTimeFormatted 
        <span id="moreText" style="align-self: center;">or more</span></h4>
    </div>

    <hr class="custom-hr">

    <div class="mt-3">
        <a href="@Url.Action("EditProfile", new { userId = Model.UserId })" class="btn btn-primary">Edit Profile</a>
        <a href="@Url.Action("Index", "TrainingPlan")" class="btn btn-primary">Training Plan</a>
    </div>
</div>

<script>
    var fiveKTime = "@Model.FiveKTimeFormatted";
</script>